{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "outDir": "dist/",
        "baseUrl": "src/",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*", "./resources/**/*", "./@types/**/*"],
    "compileOnSave": false
}
