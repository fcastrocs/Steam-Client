{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "declaration": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "outDir": "dist/",
        "baseUrl": "src/"
    },
    "include": ["src/**/*", "@types", "resources/language", "scripts"],
    "compileOnSave": false
}
