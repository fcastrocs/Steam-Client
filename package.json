{
    "name": "@fcastrocs/steamclient",
    "version": "4.0.1",
    "main": "./dist/src/index.js",
    "types": "./@types/index.d.ts",
    "scripts": {
        "prepare": "husky",
        "build": "tsc",
        "prepublishOnly": "tsc",
        "buildResources": "npx tsx ./scripts/index.ts",
        "gen-types": "npx tsx ./scripts/generate-types.ts",
        "test": "tsc && vitest",
        "lint": "eslint --ext .ts src",
        "lint:fix": "eslint --fix --ext .ts .",
        "format": "prettier . --write"
    },
    "lint-staged": {
        "*.{ts,json}": [
            "prettier --write"
        ]
    },
    "author": "Francisco Castro",
    "license": "ISC",
    "description": "Node.js implementation of the Steam client.",
    "keywords": [
        "steam",
        "steam api",
        "steam client"
    ],
    "engines": {
        "npm": ">=9.5.1",
        "node": ">=18.16.0"
    },
    "dependencies": {
        "long": "^5.2.3",
        "node-fetch": "^3.3.2",
        "node-rsa": "^1.1.1",
        "protobufjs": "^7.3.0",
        "qrcode": "^1.5.3",
        "smart-buffer": "^4.2.0",
        "type-fest": "^4.18.2"
    },
    "devDependencies": {
        "@types/node": "^20.12.12",
        "@types/node-rsa": "^1.1.4",
        "@types/qrcode": "^1.5.5",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "eslint": "^8.2.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.25.2",
        "husky": "^9.0.11",
        "prettier": "^3.2.5",
        "tsx": "^4.10.5",
        "typescript": "^5.4.5",
        "vitest": "^1.6.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fcastrocs/steam-client.git"
    },
    "bugs": {
        "url": "https://github.com/fcastrocs/steam-client/issues"
    },
    "homepage": "https://github.com/fcastrocs/steam-client#readme"
}
